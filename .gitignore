    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
double nota1 =0, nota2=0, nota3=0;//criando as variaveis das notas
double provafinal = 0, media =0;//criando as variaveis provafinal e media
//transformando os campos digitados para float
nota1 = Double.parseDouble(this.jTextField3.getText());
nota2 = Double.parseDouble(this.jTextField4.getText());
nota3 = Double.parseDouble(this.jTextField5.getText());
//calculando a média normal
media = (nota1 + nota2 + nota3)/3;
//verificando se o Aluno Fez a Prova Final
if (this.jTextField6.isEditable()){
    provafinal = Double.parseDouble(this.jTextField6.getText());
    //Calculando a média Final
    media = (40*media + 60*provafinal)/100;
}
//Atualizando o campo de Texto com a média final
this.jTextField7.setText(Double.toString(media));




    }                                        

